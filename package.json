{
  "name": "short-url",
  "scripts": {
    "d1": "wrangler d1",
    "dev": "wrangler dev",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "db:makemigration": "drizzle-kit generate --config=./db/short-url.drizzle.config.ts",
    "db:migrate": "wrangler d1 migrations apply short-url --local",
    "db:prod:migrate": "drizzle-kit migrate --config=./db/short-url.drizzle.config.ts",
    "db:prod:push": "drizzle-kit push --config=./db/short-url.drizzle.config.ts",
    "db:dump": "",
    "db:populate": "wrangler d1 execute short-url --local --file .out/dump.sql",
    "format": "prettier --check --ignore-path .gitignore .",
    "format:fix": "prettier --write --ignore-path .gitignore .",
    "deploy": "wrangler deploy --minify"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.4.1",
    "@libsql/client": "^0.14.0",
    "crypto-js": "^4.2.0",
    "drizzle-orm": "^0.36.4",
    "hono": "^4.6.12"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.11.0",
    "@cloudflare/workers-types": "^4.20241127.0",
    "@types/crypto-js": "^4.2.2",
    "drizzle-kit": "^0.28.1",
    "wrangler": "^3.88.0"
  }
}
